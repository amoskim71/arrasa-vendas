<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <Button android:layout_width="50px" android:layout_height="50px"
            android:id="@+id/btn_edit_quantidade_em_estoque"
            android:layout_centerVertical="true" android:background="@drawable/edit"
            />

    <TextView
            android:id="@+id/txtUnidade"
            android:paddingLeft="70px"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/colon"
            android:layout_toRightOf="@id/txtUnidade"
            android:text=": "/>

    <TextView
            android:id="@+id/txtQuantidade"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/colon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <CheckBox
            android:id="@+id/checkBoxShareUnidade"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>