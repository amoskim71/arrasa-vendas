<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radio_clientes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:padding="10dip"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <CheckBox
                    android:id="@+id/checkbox_vai_buscar"
                    android:layout_span="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buscar" />

                <CheckBox
                    android:layout_span="2"
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:id="@+id/checkbox_ja_pegou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entregue" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turno:" />

                <Spinner
                    android:id="@+id/spinnerTurnoEntrega"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UF:" />

                <Spinner
                    android:id="@+id/spinner_uf"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cidade:" />

                <Spinner
                    android:id="@+id/spinner_cidade"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    />
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EndereÃ§o:" />

        <EditText
            android:id="@+id/editTextEndereco"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bairro:" />

        <EditText
            android:id="@+id/editTextBairro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>


